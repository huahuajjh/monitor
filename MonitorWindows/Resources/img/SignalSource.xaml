                    <ContextMenu>
                        <MenuItem Header="{DynamicResource SignalSource_Menu_CreateItem}" Click="MenuItem_Click_8" />
                        <MenuItem Header="{DynamicResource SignalSource_Menu_Import}" />
                        <MenuItem Header="{DynamicResource SignalSource_Menu_Export}" />
                    </ContextMenu>
                </Expander.ContextMenu>
                <Expander.Header>
                    <StackPanel Orientation="Horizontal">
                        <Image Style="{StaticResource ICO_other}" />
                        <Label Content="{DynamicResource SignalSource_Title_Other}" />
                    </StackPanel>
                </Expander.Header>
                <StackPanel>
                    <RadioButton Content="测试信号" Style="{StaticResource ExpanderLeftBtnStyle}" PreviewMouseMove="RadioButton_PreviewMouseMove" PreviewMouseDown="RadioButton_PreviewMouseDown">
                        <RadioButton.ContextMenu>
                            <ContextMenu>
                                <MenuItem Header="{DynamicResource SignalSource_Menu_Edit}" Click="MenuItem_Click_9" />
