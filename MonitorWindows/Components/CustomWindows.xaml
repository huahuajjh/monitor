<UserControl x:Class="MonitorWindows.Components.CustomWindows"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008">
    <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto" Background="#4CFFFFFF">
        <Grid Name="WheelPanel"
              Margin="40"
              VerticalAlignment="Center"
              HorizontalAlignment="Center"
              MouseWheel="StackPanel_MouseWheel"
              MouseDown="WinPanel_MouseDown"
              MouseMove="WinPanel_MouseMove"
              MouseUp="WinPanel_MouseUp">
            <Grid.LayoutTransform>
                <ScaleTransform x:Name="sourceGridScaleTransform" />
            </Grid.LayoutTransform>
            <UniformGrid Name="DataGrid" />
            <Canvas
                Name="WinPanel"
                ClipToBounds="True"
                Width="{Binding ElementName=DataGrid,Path=ActualWidth,Mode=OneWay}"
                Height="{Binding ElementName=DataGrid,Path=ActualHeight,Mode=OneWay}"
                Background="Transparent"/>

        </Grid>
    </ScrollViewer>
</UserControl>
